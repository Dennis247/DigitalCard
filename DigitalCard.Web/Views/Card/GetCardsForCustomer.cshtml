@model List<CardDTO>
@{
    ViewData["Title"] = "Blogs";
}

   <div class="container-fluid">
          <div class="row">
            <div class="col-sm-12">
                  <div class="iq-card">
                        <div class="iq-card-header d-flex justify-content-between">
                           <div class="iq-header-title">
                              <h4 class="card-title">Bootstrap Datatables</h4>
                           </div>
                        </div>
                        <div class="iq-card-body">
                        
                           <div class="table-responsive">
                              <table id="datatable" class="table table-striped table-bordered" >
                       <thead>
                           <tr>
                               <th>Name</th>
                               <th>PAN</th>
                               <th>Date Created</th>
                               <th>Card Status</th>
                               <th></th>
                              
                           </tr>
                       </thead>
                       <tbody>
                          @foreach (var item in Model)
                          {
                               <tr>
                               <td>@item.CardName</td>
                               <td>@item.PAN</td>
                               <td>@item.DateCreated.ToLongDateString()</td>
                               <td>@item.CardStatus.ToString()</td>

                                        @if(item.CardStatus == DIgitalCard.Lib.Enums.CardStatus.DeActivateCard)
                                        {
                                             <td>
                                                 <a href="@Url.Action("RequestUpdateForCardStatus", new{cardStatus = DIgitalCard.Lib.Enums.CardStatus.ActivateCard,CardId = item.Id,CustomerId = item.CustomerId})" class="btn iq-bg-danger btn-rounded btn-sm my-0">Deactivate Card</a>
                                                 </td>
                                        }
                                        else
                                        {
                                             <td><a href="@Url.Action("RequestUpdateForCardStatus", new{cardStatus = DIgitalCard.Lib.Enums.CardStatus.DeActivateCard,CardId = item.Id,CustomerId = item.CustomerId})" class="btn iq-bg-success btn-rounded btn-sm my-0">Activate Card</a></td>
                                        }

                           
                           </tr>
                          }
                     </tbody>
                   
                   </table>
                           </div>
                        </div>
                     </div>
            </div>
         </div>
         
  
  </div>